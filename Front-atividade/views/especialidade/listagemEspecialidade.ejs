<%- include('../partials/header.ejs') %>

	<body style="background-color: #9EA2C6; color: rgb(255, 255, 255)">
		<div class="container">
			<div class="text-center mt-5">
				<h2><i>Listagem de especialidades</i></h2></div>
				<hr>
			</div>

			<% especialidades.forEach(especialidade=>{ %>
					<div style="background-color:#57669E"  class="border border-secondary container mt-3">
						<h5 class="mt-3 mb-3"><%= especialidade.nome_especialidade %></h5>
						<div class="mb-2 mt-2">
							<a href="/editarEspecialidade/<%= especialidade.id %>" class="btn btn-dark">Editar</a>
						</div>
					</div>

			<%  }); %>
		</div>
		<div class="text-center mt-5 mb-5">
			<a href="/" class="btn btn-dark mr-5">Home</a>
			<a href="/especialidade" class="btn btn-dark mr-2">Nova Especialidade</a>
		</div>
	</body>
	<%- include('../partials/footer.ejs') %>

</html>